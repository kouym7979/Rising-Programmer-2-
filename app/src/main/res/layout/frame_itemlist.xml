<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <GridLayout
        android:id="@+id/GridLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:layout_weight="1"
        android:columnCount="2"
        android:orientation="horizontal">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnWeight="0.5"

            android:layout_alignBottom="@+id/tableLayout"
            android:layout_margin="10dp"
            android:background="@drawable/pic1_up" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnWeight="0.5"
            android:layout_alignBottom="@+id/tableLayout"
            android:layout_margin="10dp"
            android:background="@drawable/pic2" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_alignBottom="@+id/tableLayout"
            android:layout_margin="10dp"
            android:background="@drawable/pic3" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_alignBottom="@+id/tableLayout"
            android:layout_margin="10dp"
            android:background="@drawable/pic4" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_alignBottom="@+id/tableLayout"
            android:layout_margin="10dp"
            android:background="@drawable/pic5" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_alignBottom="@+id/tableLayout"
            android:layout_margin="10dp"
            android:background="@drawable/pic6" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_alignBottom="@+id/tableLayout"
            android:layout_margin="10dp"
            android:background="@drawable/pic7" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_alignBottom="@+id/tableLayout"
            android:layout_margin="10dp"
            android:background="@drawable/pic8" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_alignBottom="@+id/tableLayout"
            android:layout_margin="10dp"
            android:background="@drawable/pic9" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_alignBottom="@+id/tableLayout"
            android:layout_margin="10dp"
            android:background="@drawable/pic10" />
    </GridLayout>
</LinearLayout>